<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer circle (ring) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#DDDDDD" /> <!-- Ring color -->
            <stroke
                android:width="2dp"
                android:color="#FA1A1A" /> <!-- Ring stroke width and color -->
        </shape>
    </item>

    <!-- Inner circle (gap) -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Gap color -->
        </shape>
    </item>

</layer-list>
