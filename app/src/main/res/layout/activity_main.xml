<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/waveHeader"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            app:mwhCloseColor="@color/Iceberg"
            app:mwhStartColor="@color/Ocean_Blue"
            app:mwhWaveHeight="60dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/Theme.DapSonTien.PopupOverlay" />

        <!--Show day-->
        <LinearLayout
            android:id="@+id/layout_today"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!--DotW-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_day"
                android:textSize="30sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Monday"
                android:textStyle="bold"
                android:textColor="@color/Ocean_Blue"/>

            <!--Date-->
            <TextView
                android:id="@+id/current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="20 Apr"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Iceberg"/>
        </LinearLayout>

        <ScrollView
            android:layout_below="@id/layout_today"
            android:layout_width="match_parent"
            android:background="?android:attr/windowBackground"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/gate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Cổng 1"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/gate1"
                    android:layout_margin="8dp"
                    android:text="Cổng 2"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/gate2"
                    android:layout_margin="8dp"
                    android:text="Cổng 3"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_below="@id/gate1"
                    android:text="Cổng 4"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/gate4"
                    android:layout_below="@id/gate2"
                    android:layout_margin="8dp"
                    android:text="Cổng 5"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/gate5"
                    android:layout_below="@id/gate3"
                    android:layout_margin="8dp"
                    android:text="Cổng 6"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_below="@id/gate4"
                    android:text="Cổng 7"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate8"
