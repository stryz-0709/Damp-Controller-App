                <Button
                    android:id="@+id/gate29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/gate28"
                    android:layout_below="@id/gate26"
                    android:layout_margin="8dp"
                    android:text="Cổng 29"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/gate30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/gate29"
                    android:layout_below="@id/gate27"
                    android:layout_margin="8dp"
                    android:text="Cổng 30"
                    android:padding="15dp" />
            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>